<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#0B92B4</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:fontFamily">@font/gess_lite</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout">@layout/activity_splash</item>
        <item name="android:fontFamily">@font/gess_lite</item>

    </style>

    <style name="AlertDialogThem" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
         <item name="android:textDirection">rtl</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
